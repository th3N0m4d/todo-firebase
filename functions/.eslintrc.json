{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": ["eslint:recommended", "google"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-undef": "off",
      "no-invalid-this": "off",
      "new-cap": "off"
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts", ".json"]
          }
        }
      }      
}